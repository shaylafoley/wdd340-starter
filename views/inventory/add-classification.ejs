<main>
    <h1>Add New Classification</h1>
  
    <% if (typeof message !== "undefined") { %>
      <p class="flash-message"><%= message %></p>
    <% } %>
  
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <ul class="error-messages">
        <% errors.forEach(error => { %>
          <li><%= error %></li>
        <% }); %>
      </ul>
    <% } %>
  
    <form action="/inv/add-classification" method="post" id="classificationForm">
      <label for="classification_name">Classification Name:</label>
      <input type="text" id="classification_name" name="classification_name" required
        pattern="^[a-zA-Z0-9]+$" 
        title="Classification name cannot contain spaces or special characters.">
  
      <button type="submit">Add Classification</button>
    </form>
  </main>
  
  <script>
    document.getElementById("classificationForm").addEventListener("submit", function (event) {
      const classificationInput = document.getElementById("classification_name").value;
      const pattern = /^[a-zA-Z0-9]+$/;
      
      if (!pattern.test(classificationInput)) {
        event.preventDefault();
        alert("Error: Classification name cannot contain spaces or special characters.");
      }
    });
  </script>
  